// ============ CHART 4: PER-CAPITA ============
(function(){
  var c=document.getElementById('percapitaChart');
  var data=[
    {c:'Liechtenstein',v:256.4},{c:'Norway',v:75.0},{c:'Finland',v:31.8},
    {c:'Austria',v:27.5},{c:'Switzerland',v:19.1},{c:'Sweden',v:16.9},
    {c:'Slovenia',v:11.4},{c:'Netherlands',v:8.4},{c:'Czech Rep.',v:5.5},
    {c:'Canada',v:5.9},{c:'Germany',v:3.4},{c:'Russia',v:2.2},
    {c:'France',v:2.0},{c:'S. Korea',v:1.5},{c:'USA',v:1.0},{c:'China',v:0.06}
  ];
  var mx=data[0].v;
  var cols=['#ffd54f','#ffb347','#ff9800','#ff9800','#ef6c00','#ef6c00','#e65100','#bf360c','#bf360c','#bf360c','#8d6e63','#8d6e63','#6d4c41','#5d4037','#5d4037','#4e342e'];
  data.forEach(function(d,i){
    var row=document.createElement('div');row.className='bar-row';
    var name=document.createElement('div');name.className='bar-c';name.textContent=d.c;
    var track=document.createElement('div');track.className='bar-t';
    var fill=document.createElement('div');fill.className='bar-f';
    var pct=(d.v/mx)*100;
    fill.style.width='0%';fill.style.background=cols[i]||'#5d4037';
    setTimeout(function(){fill.style.width=Math.max(pct,0.4)+'%';},80+i*50);
    track.appendChild(fill);
    var val=document.createElement('div');val.className='bar-v';
    val.textContent=d.v>=1?d.v.toFixed(1):d.v.toFixed(2);
    row.appendChild(name);row.appendChild(track);row.appendChild(val);
    c.appendChild(row);
  });
  var lbl=document.createElement('div');lbl.className='chart-note';
  lbl.textContent='MEDALS PER MILLION CITIZENS · 2023 POPULATION';
  c.appendChild(lbl);
})();

// ============ CHART 5: LATITUDE SCATTER ============
(function(){
  var svg=document.getElementById('scatterChart'),ns='http://www.w3.org/2000/svg';
  var pad={t:25,r:25,b:45,l:55},w=760,h=400;
  var iw=w-pad.l-pad.r,ih=h-pad.t-pad.b;
  var data=[
    {c:'Norway',lat:62,m:405},{c:'Germany',lat:51.2,m:435},{c:'USA',lat:38,m:330},
    {c:'Russia',lat:61.5,m:363},{c:'Austria',lat:47.3,m:250},{c:'Canada',lat:56.1,m:225},
    {c:'Sweden',lat:62,m:176},{c:'Finland',lat:64,m:175},{c:'Switzerland',lat:46.8,m:168},
    {c:'Netherlands',lat:52.1,m:147},{c:'Italy',lat:41.9,m:141},{c:'France',lat:46.2,m:138},
    {c:'S. Korea',lat:35.9,m:79},{c:'China',lat:35.9,m:77},{c:'Japan',lat:36.2,m:76},
    {c:'Great Britain',lat:55.4,m:34},{c:'Slovenia',lat:46.2,m:24},
    {c:'Australia',lat:25.3,m:18},{c:'Liechtenstein',lat:47.2,m:10},
    {c:'New Zealand',lat:40.9,m:4},{c:'Jamaica',lat:18.1,m:0},{c:'Brazil',lat:14.2,m:0}
  ];
  var xMax=450,yMax=70;
  function sx(x){return pad.l+(x/xMax)*iw}
  function sy(y){return pad.t+ih-(y/yMax)*ih}
  for(var v=0;v<=400;v+=100){
    var gl=document.createElementNS(ns,'line');
    gl.setAttribute('x1',sx(v));gl.setAttribute('x2',sx(v));
    gl.setAttribute('y1',pad.t);gl.setAttribute('y2',pad.t+ih);
    gl.setAttribute('stroke','rgba(255,255,255,0.04)');svg.appendChild(gl);
    var gt=document.createElementNS(ns,'text');
    gt.setAttribute('x',sx(v));gt.setAttribute('y',h-8);
    gt.setAttribute('text-anchor','middle');gt.setAttribute('fill','#7a7265');
    gt.setAttribute('font-size','10');gt.setAttribute('font-family','JetBrains Mono,monospace');
    gt.textContent=v;svg.appendChild(gt);
  }
  for(var v=0;v<=70;v+=10){
    var gl=document.createElementNS(ns,'line');
    gl.setAttribute('x1',pad.l);gl.setAttribute('x2',pad.l+iw);
    gl.setAttribute('y1',sy(v));gl.setAttribute('y2',sy(v));
    gl.setAttribute('stroke','rgba(255,255,255,0.04)');svg.appendChild(gl);
    var gt=document.createElementNS(ns,'text');
    gt.setAttribute('x',pad.l-7);gt.setAttribute('y',sy(v)+3);
    gt.setAttribute('text-anchor','end');gt.setAttribute('fill','#7a7265');
    gt.setAttribute('font-size','10');gt.setAttribute('font-family','JetBrains Mono,monospace');
    gt.textContent=v+'\u00B0';svg.appendChild(gt);
  }
  var ln=document.createElementNS(ns,'line');
  ln.setAttribute('x1',sx(0));ln.setAttribute('x2',sx(xMax));
  ln.setAttribute('y1',sy(45));ln.setAttribute('y2',sy(45));
  ln.setAttribute('stroke','rgba(255,179,71,0.2)');ln.setAttribute('stroke-dasharray','6,4');
  svg.appendChild(ln);
  var lt=document.createElementNS(ns,'text');
  lt.setAttribute('x',sx(xMax)-4);lt.setAttribute('y',sy(45)-6);
  lt.setAttribute('text-anchor','end');lt.setAttribute('fill','#ffb347');
  lt.setAttribute('font-size','9');lt.setAttribute('font-family','JetBrains Mono,monospace');
  lt.setAttribute('opacity','0.5');lt.textContent='45\u00B0N';svg.appendChild(lt);
  var xl=document.createElementNS(ns,'text');
  xl.setAttribute('x',sx(xMax/2));xl.setAttribute('y',h-0);
  xl.setAttribute('text-anchor','middle');xl.setAttribute('fill','#7a7265');
  xl.setAttribute('font-size','10');xl.setAttribute('font-family','JetBrains Mono,monospace');
  xl.textContent='ALL-TIME MEDALS';svg.appendChild(xl);
  var yl=document.createElementNS(ns,'text');
  yl.setAttribute('x',12);yl.setAttribute('y',sy(yMax/2));
  yl.setAttribute('text-anchor','middle');yl.setAttribute('fill','#7a7265');
  yl.setAttribute('font-size','10');yl.setAttribute('font-family','JetBrains Mono,monospace');
  yl.setAttribute('transform','rotate(-90,12,'+sy(yMax/2)+')');
  yl.textContent='LATITUDE';svg.appendChild(yl);
  data.forEach(function(d){
    var cx=sx(d.m),cy=sy(d.lat),above=d.lat>=45;
    var r=Math.max(3.5,Math.sqrt(d.m)*0.7);
    var circle=document.createElementNS(ns,'circle');
    circle.setAttribute('cx',cx);circle.setAttribute('cy',cy);circle.setAttribute('r',r);
    circle.setAttribute('fill',above?'#ffb347':'#4fc3f7');
    circle.setAttribute('opacity','0.75');svg.appendChild(circle);
    var show=['Norway','Germany','USA','Canada','Austria','Jamaica','Brazil','Australia','Netherlands','S. Korea','Finland','Russia','Liechtenstein'].indexOf(d.c)>=0;
    if(show){
      var t=document.createElementNS(ns,'text');
      var lx=cx+r+4,ly=cy+3,anch='start';
      if(d.c==='Norway'){ly=cy-9}
      if(d.c==='Germany'){ly=cy-7}
      if(d.c==='Russia'){ly=cy+14}
      if(d.c==='Finland'){lx=cx-r-4;anch='end'}
      if(d.c==='Jamaica'||d.c==='Brazil'){ly=cy-7}
      if(d.c==='Liechtenstein'){ly=cy+14}
      t.setAttribute('x',lx);t.setAttribute('y',ly);
      t.setAttribute('text-anchor',anch);
      t.setAttribute('fill',above?'rgba(255,179,71,0.6)':'rgba(79,195,247,0.6)');
      t.setAttribute('font-size','9');t.setAttribute('font-family','JetBrains Mono,monospace');
      t.textContent=d.c;svg.appendChild(t);
    }
  });
})();

// ============ CHART 6: HEATMAP (updated through 2022) ============
(function(){
  var c=document.getElementById('heatmap');
  var evts=['Speed','Biath','Alpine','Figure','Hockey','Bob','ShortT','Snow','Curl','Skel'];
  var full=['Speed Skating','Biathlon','Alpine Skiing','Figure Skating','Ice Hockey','Bobsled','Short Track','Snowboard','Curling','Skeleton'];
  var data=[
    {c:'USA',v:[68,0,48,53,17,28,20,35,2,8]},
    {c:'Germany',v:[72,70,41,22,3,51,0,7,0,6]},
    {c:'Russia',v:[74,51,2,64,14,5,9,6,0,4]},
    {c:'Norway',v:[87,55,40,3,0,0,0,5,5,0]},
    {c:'Canada',v:[42,3,12,29,22,11,37,17,12,4]},
    {c:'Austria',v:[6,6,128,20,0,3,0,11,0,1]},
    {c:'Netherlands',v:[133,0,0,3,0,0,9,1,0,1]},
    {c:'Switzerland',v:[0,1,74,3,3,31,0,14,7,3]},
    {c:'France',v:[0,32,51,14,0,1,0,13,1,0]},
    {c:'Sweden',v:[18,18,19,4,11,0,0,1,11,0]},
    {c:'Italy',v:[7,7,36,2,0,12,15,5,1,1]},
    {c:'S. Korea',v:[20,0,0,2,0,1,53,1,1,1]},
    {c:'China',v:[9,0,0,9,0,0,37,3,1,1]},
    {c:'Japan',v:[26,0,1,11,0,0,3,7,2,0]},
    {c:'Finland',v:[24,6,1,1,11,0,0,4,1,0]}
  ];
  var mx=133;
  function cc(v){
    if(!v)return'rgba(255,255,255,0.02)';
    var i=Math.pow(v/mx,0.5);
    return'rgb('+Math.round(13+i*242)+','+Math.round(13+i*140)+','+Math.round(13+i*10)+')';
  }
  function tc(v){
    if(!v)return'rgba(255,255,255,0.12)';
    return v/mx>0.4?'rgba(0,0,0,0.8)':'rgba(255,255,255,0.8)';
  }

  // Legend
  var leg=document.createElement('div');
  leg.style.cssText='display:flex;align-items:center;gap:6px;margin-bottom:14px;font-family:JetBrains Mono,monospace;font-size:9px;color:#7a7265;letter-spacing:1px';
  var ll=document.createElement('span');ll.textContent='0';leg.appendChild(ll);
  var bar=document.createElement('div');
  bar.style.cssText='flex:0 0 180px;height:10px;border-radius:3px;background:linear-gradient(to right,rgba(255,255,255,0.02),rgb(90,55,5),rgb(175,100,8),rgb(255,153,10))';
  leg.appendChild(bar);
  var lr=document.createElement('span');lr.textContent='133';leg.appendChild(lr);
  var llab=document.createElement('span');llab.textContent='MEDALS';llab.style.marginLeft='4px';leg.appendChild(llab);
  c.appendChild(leg);

  var tbl=document.createElement('table');tbl.className='hm';
  var thead=document.createElement('thead');
  var hr=document.createElement('tr');
  var th0=document.createElement('th');th0.textContent='';hr.appendChild(th0);
  evts.forEach(function(e,i){
    var th=document.createElement('th');th.textContent=e;th.title=full[i];hr.appendChild(th);
  });
  var thT=document.createElement('th');thT.textContent='Total';thT.style.borderLeft='2px solid rgba(255,255,255,0.08)';hr.appendChild(thT);
  thead.appendChild(hr);tbl.appendChild(thead);
  var tbody=document.createElement('tbody');
  data.forEach(function(row){
    var tr=document.createElement('tr');
    var td0=document.createElement('td');td0.textContent=row.c;tr.appendChild(td0);
    var sum=0;
    row.v.forEach(function(v,i){
      sum+=v;
      var td=document.createElement('td');
      var sp=document.createElement('span');sp.className='hm-cell';
      sp.textContent=v;sp.style.background=cc(v);sp.style.color=tc(v);
      sp.title=row.c+': '+v+' '+full[i]+' medals';
      td.appendChild(sp);tr.appendChild(td);
    });
    var tdT=document.createElement('td');
    tdT.style.cssText='border-left:2px solid rgba(255,255,255,0.08);font-weight:700;color:#e8e0d4;text-align:center;font-size:12px';
    tdT.textContent=sum;
    tr.appendChild(tdT);
    tbody.appendChild(tr);
  });
  tbl.appendChild(tbody);c.appendChild(tbl);
  var note=document.createElement('div');note.className='chart-note';
  note.textContent='UNIQUE MEDAL EVENTS PER COUNTRY · 1924–2022 · UNIFIED COUNTRY CODES';
  c.appendChild(note);
})();
</script>
</body>
</html>
