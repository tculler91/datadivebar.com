// ============ CHART 1: TIMELINE ============
(function(){
  var c=document.getElementById('timeline'),mn=1908,mx=2022,rng=mx-mn;
  var evts=[
    {n:'Figure Skating',s:[{a:1908,b:2022,c:'#ff6b9d'}]},
    {n:'Ice Hockey',s:[{a:1920,b:2022,c:'#4fc3f7'}]},
    {n:'Speed Skating',s:[{a:1924,b:2022,c:'#ffb347'}]},
    {n:'Bobsled',s:[{a:1924,b:2022,c:'#ef5350'}]},
    {n:'Curling',s:[{a:1924,b:1924,c:'#69f0ae'},{a:1924,b:1998,c:'gap'},{a:1998,b:2022,c:'#69f0ae'}]},
    {n:'Alpine Skiing',s:[{a:1936,b:2022,c:'#ab47bc'}]},
    {n:'Skeleton',s:[{a:1928,b:1948,c:'#78909c'},{a:1948,b:2002,c:'gap'},{a:2002,b:2022,c:'#78909c'}]},
    {n:'Biathlon',s:[{a:1960,b:2022,c:'#8bc34a'}]},
    {n:'Short Track',s:[{a:1992,b:2022,c:'#ff9800'}]},
    {n:'Snowboard',s:[{a:1998,b:2022,c:'#e040fb'}]}
  ];
  evts.forEach(function(e){
    var row=document.createElement('div');row.className='tl-row';
    var lbl=document.createElement('div');lbl.className='tl-name';lbl.textContent=e.n;row.appendChild(lbl);
    var trk=document.createElement('div');trk.className='tl-track';
    e.s.forEach(function(sp){
      var bar=document.createElement('div');bar.className='tl-bar'+(sp.c==='gap'?' gap':'');
      var l=((sp.a-mn)/rng)*100,w=Math.max(((sp.b-sp.a)/rng)*100,0.7);
      bar.style.left=l+'%';bar.style.width=w+'%';
      if(sp.c!=='gap')bar.style.background=sp.c;
      trk.appendChild(bar);
    });
    row.appendChild(trk);c.appendChild(row);
  });
  var ax=document.createElement('div');ax.className='tl-axis';
  [1908,1924,1936,1948,1960,1972,1984,1998,2010,2022].forEach(function(y){
    var t=document.createElement('span');t.textContent=y;ax.appendChild(t);
  });
  c.appendChild(ax);
})();

// ============ CHART 2: DUTCH TAKEOVER (through 2022) ============
(function(){
  var svg=document.getElementById('dutchChart'),ns='http://www.w3.org/2000/svg';
  var data=[
    {y:1924,p:0},{y:1928,p:0},{y:1932,p:0},{y:1936,p:0},{y:1948,p:0},
    {y:1952,p:23},{y:1956,p:0},{y:1960,p:4},{y:1964,p:4},{y:1968,p:39},
    {y:1972,p:38},{y:1976,p:19},{y:1980,p:14},{y:1984,p:0},{y:1988,p:23},
    {y:1992,p:13},{y:1994,p:13},{y:1998,p:37},{y:2002,p:27},{y:2006,p:25},
    {y:2010,p:19},{y:2014,p:64},{y:2018,p:38},{y:2022,p:29}
  ];
  var pad={t:20,r:20,b:36,l:44},w=760,h=300;
  var iw=w-pad.l-pad.r,ih=h-pad.t-pad.b;
  var xMin=1924,xMax=2022,yMax=70;
  function sx(v){return pad.l+((v-xMin)/(xMax-xMin))*iw}
  function sy(v){return pad.t+ih-(v/yMax)*ih}

  for(var v=0;v<=70;v+=10){
    var gl=document.createElementNS(ns,'line');
    gl.setAttribute('x1',pad.l);gl.setAttribute('x2',pad.l+iw);
    gl.setAttribute('y1',sy(v));gl.setAttribute('y2',sy(v));
    gl.setAttribute('stroke','rgba(255,255,255,0.06)');svg.appendChild(gl);
    var gt=document.createElementNS(ns,'text');
    gt.setAttribute('x',pad.l-6);gt.setAttribute('y',sy(v)+3);
    gt.setAttribute('text-anchor','end');gt.setAttribute('fill','#7a7265');
    gt.setAttribute('font-size','10');gt.setAttribute('font-family','JetBrains Mono,monospace');
    gt.textContent=v+'%';svg.appendChild(gt);
  }
  [1924,1940,1960,1980,2000,2022].forEach(function(yr){
    var xt=document.createElementNS(ns,'text');
    xt.setAttribute('x',sx(yr));xt.setAttribute('y',h-8);
    xt.setAttribute('text-anchor','middle');xt.setAttribute('fill','#7a7265');
    xt.setAttribute('font-size','10');xt.setAttribute('font-family','JetBrains Mono,monospace');
    xt.textContent=yr;svg.appendChild(xt);
  });

  var pts=data.map(function(d){return sx(d.y)+','+sy(d.p)}).join(' ');
  var areaPts=sx(data[0].y)+','+sy(0)+' '+pts+' '+sx(data[data.length-1].y)+','+sy(0);
  var area=document.createElementNS(ns,'polygon');
  area.setAttribute('points',areaPts);
  area.setAttribute('fill','rgba(255,179,71,0.12)');svg.appendChild(area);
  var line=document.createElementNS(ns,'polyline');
  line.setAttribute('points',pts);line.setAttribute('fill','none');
  line.setAttribute('stroke','#ffb347');line.setAttribute('stroke-width','2.5');
  svg.appendChild(line);

  data.forEach(function(d){
    var cx=sx(d.y),cy=sy(d.p);
    var dot=document.createElementNS(ns,'circle');
    dot.setAttribute('cx',cx);dot.setAttribute('cy',cy);dot.setAttribute('r',d.p>30?5:3);
    dot.setAttribute('fill','#ffb347');svg.appendChild(dot);
    if(d.y===2014){
      var t=document.createElementNS(ns,'text');
      t.setAttribute('x',cx);t.setAttribute('y',cy-14);
      t.setAttribute('text-anchor','middle');t.setAttribute('fill','#fff');
      t.setAttribute('font-size','12');t.setAttribute('font-weight','700');
      t.setAttribute('font-family','JetBrains Mono,monospace');
      t.textContent='64%';svg.appendChild(t);
      var t2=document.createElementNS(ns,'text');
      t2.setAttribute('x',cx);t2.setAttribute('y',cy-26);
      t2.setAttribute('text-anchor','middle');t2.setAttribute('fill','#7a7265');
      t2.setAttribute('font-size','9');t2.setAttribute('font-family','JetBrains Mono,monospace');
      t2.textContent='SOCHI';svg.appendChild(t2);
    }
    if(d.y===2022){
      var t=document.createElementNS(ns,'text');
      t.setAttribute('x',cx-2);t.setAttribute('y',cy-10);
      t.setAttribute('text-anchor','end');t.setAttribute('fill','#7a7265');
      t.setAttribute('font-size','10');t.setAttribute('font-family','JetBrains Mono,monospace');
      t.textContent='29%';svg.appendChild(t);
    }
  });
})();

